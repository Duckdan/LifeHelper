<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B">

    <com.study.yang.lifehelper.defineview.ListSlideView
        android:id="@+id/lv_voice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:visibility="gone"
        app:mode="right"></com.study.yang.lifehelper.defineview.ListSlideView>

    <TextView
        android:id="@+id/tv_list_tip"
        android:layout_width="500.0px"
        android:layout_height="500.0px"
        android:layout_centerInParent="true"
        android:background="@drawable/voice_list_shape"
        android:singleLine="true"
        android:gravity="center"
        android:text="空空如也"
        android:textSize="100.0px" />
</com.zhy.autolayout.AutoRelativeLayout>