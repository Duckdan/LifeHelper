<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_day_info_title"
            style="@style/AppTitleStyle"
            android:text="生活帮" />

        <RelativeLayout
            android:id="@+id/rl_day_info"
            android:layout_width="60.0px"
            android:layout_height="60.0px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30.0px">

            <ImageView
                android:layout_width="25.0px"
                android:layout_height="45.0px"
                android:layout_centerVertical="true"
                android:background="@drawable/return_iv" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="20.0px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                style="@style/AppDayInfoTv"
                android:text="天联" />

            <TextView
                android:id="@+id/tv_love_txt"
                style="@style/AppDayInfoTv"
                android:text="天联" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppDayInfoTv"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="工作指数：" />

                <RatingBar
                    android:id="@+id/rb_work_star"
                    style="@style/AppDayInfoRb"
                    android:starStyle="?android:ratingBarStyleSmall"
                    android:rating="4" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppDayInfoTv"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="财运指数：" />

                <RatingBar
                    android:id="@+id/rb_money_star"
                    style="@style/AppDayInfoRb"
                    android:rating="4" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_lucky_color"
                style="@style/AppDayInfoTv"
                android:text="天联" />

            <TextView
                android:id="@+id/tv_lucky_time"
                style="@style/AppDayInfoTv"
                android:text="天联" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppDayInfoTv"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="爱情指数：" />

                <RatingBar
                    android:id="@+id/rb_love_star"
                    style="@style/AppDayInfoRb"
                    android:rating="4" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_lucky_direction"
                style="@style/AppDayInfoTv"
                android:text="天联" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppDayInfoTv"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="综合指数：" />

                <RatingBar
                    android:id="@+id/rb_summary_star"
                    style="@style/AppDayInfoRb"
                    android:rating="4" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_money_txt"
                style="@style/AppDayInfoTv"
                android:text="天联" />

            <TextView
                android:id="@+id/tv_general_txt"
                style="@style/AppDayInfoTv"
                android:text="天联" />

            <TextView
                android:id="@+id/tv_grxz"
                style="@style/AppDayInfoTv"
                android:text="天联" />

            <TextView
                android:id="@+id/tv_lucky_num"
                style="@style/AppDayInfoTv"
                android:text="天联" />

            <TextView
                android:id="@+id/tv_day_notice"
                style="@style/AppDayInfoTv"
                android:text="天联" />

            <TextView
                android:id="@+id/tv_work_txt"
                style="@style/AppDayInfoTv"
                android:text="天联" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>