<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400.0px"
    android:background="@drawable/item_lv_note_book_incense_shape"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_diary_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="20.0px"
        android:singleLine="true"
        android:text="2017年04月05日"
        android:textSize="48.0px" />

    <TextView
        android:id="@+id/tv_diary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="20.0px"
        android:singleLine="true"
        android:text="进入"
        android:textSize="48.0px" />

</LinearLayout>