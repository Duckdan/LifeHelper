<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500.0px"
    android:layout_height="400.0px"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_diary_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20.0px"
        android:singleLine="true"
        android:text="进入"
        android:textSize="48.0px" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0px"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_diary_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="20.0px"
            android:singleLine="true"
            android:textSize="48.0px" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00AFF0"
        android:layout_gravity="right"
        android:text="忘记密码？"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="20.0px"
            android:text="取消"
            android:textSize="48.0px" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="20.0px"
            android:text="确定"
            android:textSize="48.0px" />
    </LinearLayout>
</LinearLayout>