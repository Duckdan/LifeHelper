<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="70.0px"
            android:paddingLeft="10.0px"
            android:gravity="center_vertical"
            android:text="深圳"
            android:textSize="48.0px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2.0px"
            android:background="#aaaaaa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="白天"
                    android:textSize="36.0px" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_day"
                    android:layout_width="540.0px"
                    android:layout_height="540.0px" />

                <TextView
                    android:id="@+id/tv_day_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="天联"
                    android:textSize="36.0px" />

                <TextView
                    android:id="@+id/tv_day_wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="天联"
                    android:textSize="36.0px" />

                <TextView
                    android:id="@+id/tv_day_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="天联"
                    android:textSize="36.0px" />
            </LinearLayout>

            <View
                android:layout_width="2.0px"
                android:layout_height="700.0px"
                android:background="#aaaaaa" />

            <LinearLayout
                android:id="@+id/ll_night"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="夜间"
                    android:textSize="36.0px" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_night"
                    android:layout_width="540.0px"
                    android:layout_height="540.0px" />

                <TextView
                    android:id="@+id/tv_night_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="天联"
                    android:textSize="36.0px" />

                <TextView
                    android:id="@+id/tv_night_wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="天联"
                    android:textSize="36.0px" />

                <TextView
                    android:id="@+id/tv_night_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="天联"
                    android:textSize="36.0px" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>