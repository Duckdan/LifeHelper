<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_phone_title"
            style="@style/AppTitleStyle"
            android:text="号码归属"
            />

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="60.0px"
            android:layout_height="60.0px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30.0px">

            <ImageView
                android:layout_width="25.0px"
                android:layout_height="45.0px"
                android:layout_centerVertical="true"
                android:background="@drawable/return_iv"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入电话号码"
            android:paddingLeft="10.0px"
            android:textSize="48.0px"/>

        <Button
            android:id="@+id/bt_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:textSize="48.0px"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_QCellCore"
        style="@style/PhoneTvStyle"/>

    <TextView
        android:id="@+id/tv_carrier_operator"
        style="@style/PhoneTvStyle"/>

    <TextView
        android:id="@+id/tv_province_code"
        style="@style/PhoneTvStyle"/>

    <TextView
        android:id="@+id/tv_post_code"
        style="@style/PhoneTvStyle"/>

    <TextView
        android:id="@+id/tv_area_code"
        style="@style/PhoneTvStyle"/>
</LinearLayout>
